<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:background="@color/pink">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/background_cart"
        android:padding="12dp">

        <!-- Left column: Image and Price in a vertical stack -->
        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="12dp">

            <ImageView
                android:id="@+id/itemImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey"
                android:scaleType="centerCrop" />

        </androidx.cardview.widget.CardView>

        <!-- Middle column: Item details (Name, Category, Capacity) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="5dp">

            <TextView
                android:id="@+id/itemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Name"
                android:fontFamily="@font/arial_th"
                android:textColor="@android:color/black"
                android:textSize="19sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/itemCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:fontFamily="@font/arial_th"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/itemCapacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capacity"
                android:fontFamily="@font/arial_th"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/itemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚±0.00"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="16sp"
                android:gravity="center"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Right column: Add Ons button and Delete icon -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginStart="1dp"
            android:gravity="center_vertical">

            <!-- "Add Ons" Button -->
            <Button
                android:id="@+id/buttonAddOns"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Ons"
                android:textColor="@color/white"
                android:backgroundTint="@color/light_blue"
                android:layout_marginEnd="12dp" />


            <!-- Delete icon -->
            <ImageView
                android:id="@+id/deleteButton"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="5dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:src="@drawable/ic_delete"
                app:tint="@color/red" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
