<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/tvDialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Receipt Details"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textStyle="bold"
            android:gravity="center"
            android:fontFamily="@font/arial_th"
            android:textColor="@color/black"
            android:paddingBottom="8dp" />

        <!-- Underline -->
        <View
            android:layout_width="80dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="@color/light_blue"
            android:layout_marginBottom="16dp" />

        <!-- Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/white">

                <!-- Info Row Template -->
                <!-- Repeat this row for each label/value -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="6dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Name:"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:fontFamily="@font/arial_th" />

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:textColor="@color/black"
                        android:fontFamily="@font/arial_th" />
                </LinearLayout>

                <!-- Repeat for each field -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="6dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Payment Method:"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:fontFamily="@font/arial_th" />

                    <TextView
                        android:id="@+id/tvPaymentMethod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Credit Card"
                        android:textColor="@color/black"
                        android:fontFamily="@font/arial_th" />
                </LinearLayout>

                <!-- Add more fields here following the same pattern -->
                <!-- Total Amount -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="6dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Total Amount:"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:fontFamily="@font/arial_th" />

                    <TextView
                        android:id="@+id/tvTotal"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="$650.00"
                        android:textColor="@color/black"
                        android:fontFamily="@font/arial_th" />
                </LinearLayout>

                <!-- Paid Amount -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="6dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Paid Amount:"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:fontFamily="@font/arial_th" />

                    <TextView
                        android:id="@+id/tvAmount"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="$150.00"
                        android:textColor="@color/black"
                        android:fontFamily="@font/arial_th" />
                </LinearLayout>

                <!-- Balance -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="6dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Balance:"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:fontFamily="@font/arial_th" />

                    <TextView
                        android:id="@+id/tvBalance"
                        android:layout_width="wrap_content"
                        android:text="$500.00"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="@font/arial_th" />
                </LinearLayout>

                <!-- Date -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="6dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Date:"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:fontFamily="@font/arial_th" />

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:text="02/25/2025"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="@font/arial_th" />
                </LinearLayout>

                <!-- Phone -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="6dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Phone:"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:fontFamily="@font/arial_th" />

                    <TextView
                        android:id="@+id/tvPhone"
                        android:layout_width="wrap_content"
                        android:text="+1 234 567 890"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="@font/arial_th" />
                </LinearLayout>

                <!-- Reference -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="6dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Reference:"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="@font/arial_th" />

                    <TextView
                        android:id="@+id/tvReference"
                        android:layout_width="wrap_content"
                        android:text="ABC123XYZ"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="@font/arial_th" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">

            <Button
                android:id="@+id/btnCancelPayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:backgroundTint="@color/red"
                android:textColor="@android:color/white"
                android:fontFamily="@font/arial_th"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnDownloadPayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:backgroundTint="@color/light_blue"
                android:textColor="@android:color/white"
                android:fontFamily="@font/arial_th" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>


