<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pink"
    app:cardCornerRadius="10dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#E0E5EC"
        android:padding="10dp">

        <!-- CardView to round the promo image -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="235dp"
            app:cardCornerRadius="10dp"
            android:elevation="0dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="false">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- ImageView for promo image -->
                <ImageView
                    android:id="@+id/promoImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/promoViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


                <!-- Container for promo texts -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="bottom|start"
                    android:layout_margin="8dp">

                    <!-- Promo Discount -->
                    <TextView
                        android:id="@+id/promoDiscount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_red_dark"/>

                    <!-- Promo Duration -->
                    <TextView
                        android:id="@+id/promoDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/arial_th"
                        android:textColor="@color/white"/>

                    <!-- Promo Start Date -->
                    <TextView
                        android:id="@+id/promoStartDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>

                </LinearLayout>

            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/promoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:fontFamily="@font/arial_th"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/promoDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textAlignment="viewStart"
            android:justificationMode="inter_word"
            android:layout_marginTop="4dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>



