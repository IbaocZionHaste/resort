<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".BookingStatus">

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="590dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/profile_booking_status_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!-- Main container for the vertical timeline -->


    <LinearLayout
        android:id="@+id/timeline_container"
        android:layout_width="103dp"
        android:layout_height="550dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/back2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/back2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497">

        <!-- Dot 1 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dot5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/drawable_dot_line_color"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:gravity="center"
                android:text="Approved"
                android:textColor="@color/black"
                android:textSize="9sp"
                android:textStyle="bold"
                app:itemTextAppearanceActive="@style/Size_Text"
                app:itemTextAppearanceInactive="@style/Size_Text" />
        </LinearLayout>

        <!-- Connecting Line 1 -->
        <View
            android:id="@+id/line4"
            android:layout_width="4dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@color/grey" />

        <!-- Dot 2 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dot4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/drawable_dot_line_color"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:gravity="center"
                android:text="Payment Approval"
                android:textColor="@color/black"
                android:textSize="9sp"
                android:textStyle="bold"
                app:itemTextAppearanceActive="@style/Size_Text"
                app:itemTextAppearanceInactive="@style/Size_Text" />
        </LinearLayout>

        <!-- Connecting Line 2 -->
        <View
            android:id="@+id/line3"
            android:layout_width="4dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:background="@color/grey" />

        <!-- Dot 3 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dot3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/drawable_dot_line_color"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:gravity="center"
                android:text="Payment"
                android:textColor="@color/black"
                android:textSize="9sp"
                android:textStyle="bold"
                app:itemTextAppearanceActive="@style/Size_Text"
                app:itemTextAppearanceInactive="@style/Size_Text" />
        </LinearLayout>

        <!-- Connecting Line 3 -->
        <View
            android:id="@+id/line2"
            android:layout_width="4dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:background="@color/grey" />

        <!-- Dot 4 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dot2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/drawable_dot_line_color"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:gravity="center"
                android:text="Booking Review"
                android:textColor="@color/black"
                android:textSize="9sp"
                android:textStyle="bold"
                app:itemTextAppearanceActive="@style/Size_Text"
                app:itemTextAppearanceInactive="@style/Size_Text" />
        </LinearLayout>

        <!-- Connecting Line 4 -->
        <View
            android:id="@+id/line1"
            android:layout_width="4dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@color/grey" />

        <!-- Dot 5 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dot1"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:background="@drawable/drawable_dot_line_color"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Submitted"
                android:textColor="@color/black"
                android:textSize="9sp"
                android:textStyle="bold"
                app:itemTextAppearanceActive="@style/Size_Text"
                app:itemTextAppearanceInactive="@style/Size_Text" />
        </LinearLayout>
    </LinearLayout>


        <TextView
            android:id="@+id/textView18"
            android:layout_width="175dp"
            android:layout_height="36dp"
            android:fontFamily="@font/arial_th"
            android:text="Booking Status"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="23dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.542"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.043" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/refresh"
            android:layout_width="47dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/light_blue"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_explore_refresh"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.023" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/back2"
            android:layout_width="47dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:backgroundTint="@color/light_blue"
            android:drawableLeft="@drawable/ic_profile_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.027"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.023" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button2"
            style="@android:style/Widget.Button"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edittext_background"
            android:backgroundTint="@color/red"
            android:text="Cancel"
            android:textColor="@color/white"
            android:fontFamily="@font/arial_th"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintHorizontal_bias="0.911"
            app:layout_constraintStart_toStartOf="@+id/timeline_container"
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_constraintVertical_bias="1.0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button"
            style="@android:style/Widget.Button"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/booking_status_border_rounded"
            android:text="Pay Now"
            android:fontFamily="@font/arial_th"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintHorizontal_bias="0.113"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_constraintVertical_bias="1.0" />

        <FrameLayout
        android:id="@+id/messageFramedot2"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:background="@drawable/frame_background"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/messageFramedot3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/messageFramedot3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.674" >

        <TextView
            android:id="@+id/messageText2"
            android:layout_width="240dp"
            android:layout_height="76dp"
            android:textAlignment="viewStart"
            android:justificationMode="inter_word"
            android:padding="8dp"
            android:text="Booking has been Reviewed. Plese proceed to the payment by clicking the Pay Now button."
            android:textColor="@color/black"
            android:visibility="gone"
            android:textSize="12.8sp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/messageFramedot3"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:background="@drawable/frame_background"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/messageFramedot4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/messageFramedot4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" >

        <TextView
            android:id="@+id/messageText3"
            android:layout_width="240dp"
            android:layout_height="75dp"
            android:textAlignment="viewStart"
            android:justificationMode="inter_word"
            android:padding="8dp"
            android:text="Booking has been Submitted. Please wait for it to be reviewed by the admin."
            android:textColor="@color/black"
            android:visibility="gone"
            android:textSize="13sp"  />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/messageFramedot5"
        android:layout_width="245dp"
        android:layout_height="75dp"
        android:background="@drawable/frame_background"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.814"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.166" >

        <TextView
            android:id="@+id/messageText5"
            android:layout_width="240dp"
            android:layout_height="75dp"
            android:padding="8dp"
            android:textAlignment="viewStart"
            android:justificationMode="inter_word"
            android:text="Congratulation! Your Booking has been Approved."
            android:textColor="@color/black"
            android:visibility="gone"
            android:textSize="13sp" />
    </FrameLayout>


    <FrameLayout
        android:id="@+id/messageFramedot4"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:background="@drawable/frame_background"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/messageFramedot5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/messageFramedot5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.334" >

        <TextView
            android:id="@+id/messageText4"
            android:layout_width="245dp"
            android:layout_height="75dp"
            android:textAlignment="viewStart"
            android:justificationMode="inter_word"
            android:padding="8dp"
            android:text="Booking has been Approved. Please patiently wait for the admin to approved your booking."
            android:textColor="@color/black"
            android:visibility="gone"
            android:textSize="13sp"  />
    </FrameLayout>

    <!--    //submitted ito-->
    <FrameLayout
        android:id="@+id/messageFramedot1"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:background="@drawable/frame_background"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/messageFramedot2"
        app:layout_constraintStart_toStartOf="@+id/messageFramedot2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.851">

        <TextView
            android:id="@+id/messageText"
            android:layout_width="240dp"
            android:layout_height="75dp"
            android:textAlignment="viewStart"
            android:justificationMode="inter_word"
            android:padding="8dp"
            android:text="Booking has been Submitted. Please wait for it to be reviewed by the admin."
            android:textColor="@color/black"
            android:visibility="gone"
            android:textSize="13sp"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
